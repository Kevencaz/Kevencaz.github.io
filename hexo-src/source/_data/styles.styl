// ========== 副标题固定高度，防止跳动 ==========
.site-subtitle
  min-height: 24px
  display: inline-block

// ========== 顶部 Header 固定 ==========
.header
  position: fixed !important
  top: 0
  left: 0
  right: 0
  z-index: 1500
  background: rgba(255, 255, 255, 0.98)
  backdrop-filter: blur(10px)
  -webkit-backdrop-filter: blur(10px)
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08)

// ========== 菜单栏固定悬浮（滚动时可见）==========
.site-nav
  position: sticky !important
  top: 0
  z-index: 1400
  background: rgba(255, 255, 255, 0.98)
  backdrop-filter: blur(10px)
  -webkit-backdrop-filter: blur(10px)
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06)
  transition: all 0.3s ease

// 给 body 留出导航栏高度
.main
  padding-top: 100px

// Gemini scheme 下内容区域偏移修正
.content-wrap
  padding-top: 10px

// ========== 侧边栏始终可见 ==========
.sidebar
  visibility: visible !important
  opacity: 1 !important

.sidebar-inner
  position: sticky !important
  top: 90px

// 侧边栏 TOC 优化
.post-toc
  max-height: calc(100vh - 160px)
  overflow-y: auto

// ========== 文章卡片悬浮效果 ==========
.post-block
  transition: all 0.35s ease
  border-radius: 12px
  &:hover
    transform: translateY(-6px)
    box-shadow: 0 12px 36px rgba(0, 0, 0, 0.12)

// ========== 标题渐变色 ==========
.post-title a,
.post-title-link
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%)
  -webkit-background-clip: text
  -webkit-text-fill-color: transparent
  background-clip: text
  transition: all 0.3s ease
  &:hover
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%)
    -webkit-background-clip: text
    background-clip: text

// ========== 侧边栏头像呼吸光环 ==========
.site-author-image
  border: 3px solid transparent
  background-clip: padding-box
  position: relative
  &::after
    content: ''
    position: absolute
    top: -6px
    left: -6px
    right: -6px
    bottom: -6px
    border-radius: 50%
    background: linear-gradient(135deg, #667eea, #764ba2, #f093fb, #f5576c)
    z-index: -1
    animation: avatar-glow 3s ease-in-out infinite

@keyframes avatar-glow
  0%, 100%
    opacity: 0.6
    transform: scale(1)
  50%
    opacity: 1
    transform: scale(1.05)

// ========== 标签云彩虹色 ==========
.tag-cloud a
  transition: all 0.3s ease
  border-radius: 4px
  padding: 2px 6px
  &:hover
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%)
    color: #fff !important
    transform: scale(1.15)

// ========== 代码块增强 ==========
figure.highlight
  border-radius: 10px
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08)
  transition: box-shadow 0.3s ease
  &:hover
    box-shadow: 0 8px 28px rgba(0, 0, 0, 0.15)

// ========== 链接下划线动画 ==========
.post-body a:not(.fancybox)
  position: relative
  color: #667eea
  text-decoration: none
  &::after
    content: ''
    position: absolute
    width: 0
    height: 2px
    bottom: -2px
    left: 0
    background: linear-gradient(90deg, #667eea, #764ba2)
    transition: width 0.3s ease
  &:hover::after
    width: 100%

// ========== 阅读进度条渐变 ==========
.reading-progress-bar
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb) !important

// ========== 菜单项悬浮效果 ==========
.menu-item a
  transition: all 0.3s ease
  border-radius: 6px
  &:hover
    background: rgba(102, 126, 234, 0.1)
    transform: translateY(-2px)

// ========== 页脚心跳动画 ==========
.with-love
  animation: heartbeat 1.2s ease-in-out infinite

@keyframes heartbeat
  0%, 100%
    transform: scale(1)
  14%
    transform: scale(1.3)
  28%
    transform: scale(1)
  42%
    transform: scale(1.3)
  70%
    transform: scale(1)

// ========== 访问量统计样式 ==========
.busuanzi-count
  font-size: 14px
  color: #999

#busuanzi_container_site_pv,
#busuanzi_container_site_uv
  display: inline-block
  margin: 0 8px

// ========== 评论区样式优化 ==========
.comments
  margin-top: 40px

.gt-container
  .gt-header-textarea
    border-radius: 8px
    border: 2px solid #e8e8e8
    transition: border-color 0.3s ease
    &:focus
      border-color: #667eea

  .gt-btn
    background: linear-gradient(135deg, #667eea, #764ba2)
    border: none
    border-radius: 6px
    &:hover
      opacity: 0.9

// ========== 游戏页面样式 ==========
.game-container
  text-align: center
  padding: 20px

.game-tabs
  display: flex
  justify-content: center
  gap: 12px
  margin-bottom: 24px
  flex-wrap: wrap

.game-tab-btn
  padding: 10px 24px
  border: 2px solid #667eea
  border-radius: 24px
  background: transparent
  color: #667eea
  font-size: 15px
  cursor: pointer
  transition: all 0.3s ease
  &:hover
    background: rgba(102, 126, 234, 0.1)
    transform: translateY(-2px)
  &.active
    background: linear-gradient(135deg, #667eea, #764ba2)
    color: #fff
    border-color: transparent

.game-panel
  display: none
  &.active
    display: block

.game-canvas-wrap
  display: inline-block
  border-radius: 12px
  overflow: hidden
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12)

.game-score
  font-size: 20px
  margin: 16px 0
  color: #667eea
  font-weight: bold

.game-hint
  color: #999
  font-size: 14px
  margin-top: 8px

.game-btn
  display: inline-block
  margin: 8px
  padding: 10px 28px
  border: none
  border-radius: 24px
  background: linear-gradient(135deg, #667eea, #764ba2)
  color: #fff
  font-size: 15px
  cursor: pointer
  transition: all 0.3s ease
  &:hover
    transform: translateY(-2px)
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4)
