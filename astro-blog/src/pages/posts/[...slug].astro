---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import { formatDate, slugify } from '@/utils';
import { SITE } from '@/config';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title}>
  <article class="post-detail">
    <header class="post-header">
      <h1 class="post-title" style="background:linear-gradient(135deg,var(--primary),var(--primary-dark));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;">
        {post.data.title}
      </h1>
      <div class="post-meta">
        <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
        {post.data.tags.length > 0 && (
          <span class="post-tags">
            {post.data.tags.map((tag) => (
              <a href={`/tags/${slugify(tag)}/`} class="tag">#{tag}</a>
            ))}
          </span>
        )}
      </div>
    </header>
    <div class="post-body">
      <Content />
    </div>
  </article>

  <!-- Gitalk 评论 -->
  <div id="gitalk-container" style="margin-top:40px;"></div>
  <link rel="stylesheet" href="https://unpkg.com/gitalk/dist/gitalk.css" />
  <script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
  <script define:vars={{ githubId: SITE.github, repo: SITE.repo, clientId: SITE.gitalkClientId, clientSecret: SITE.gitalkClientSecret, postId: post.id }}>
    if (document.getElementById('gitalk-container')) {
      new Gitalk({
        clientID: clientId,
        clientSecret: clientSecret,
        repo: repo,
        owner: githubId,
        admin: [githubId],
        id: postId.substring(0, 50),
        distractionFreeMode: true,
        language: 'zh-CN',
      }).render('gitalk-container');
    }
  </script>
</BaseLayout>
